{
    "manifest_version": 3,
    "name": "YouTube Opinion Extension",
    "version": "1.0",
    "description": "Get opinions about YouTube videos",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["popup.js"]
      }
    ]
  }
  